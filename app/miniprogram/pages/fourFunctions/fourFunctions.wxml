  <view class="user" >
    <button 
      open-type="getUserInfo" 
      bindgetuserinfo="onGetUserInfo"
      class="userImg"
      style="background-image: url({{avatarUrl}})"
    ></button> 
  </view>


  <view class='funcIndex'>

  <!-- Remote Diagnosis -->
  <view class="function">
    <navigator url="" open-type="navigate" class="function-text">
      <text>Remote Diagnosis</text>
    </navigator>
  </view>

  <!-- Health Record -->
  <view class="function">
    <navigator url="../healthRecord/healthRecord" open-type="navigate" class="function-text">
      <text>Health Record</text>
    </navigator>
  </view>

  <!-- Automatic Diagnosis -->
  <view class="function">
    <navigator url="" open-type="navigate" class="function-text">
      <text>Automatic Diagnosis</text>
    </navigator>
  </view>


  <!-- Prescription -->
  <view class="function">
    <navigator url="" open-type="navigate" class="function-text">
      <text>Prescription</text>
    </navigator>
  </view>

